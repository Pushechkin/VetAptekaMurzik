<Page x:Class="VetAptekaMurzik.Pages.PageCategoryEdit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VetAptekaMurzik.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageCategoryEdit">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>

        </Grid.RowDefinitions>

        <TextBlock>Редактирование категории</TextBlock>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <TextBlock>Процент</TextBlock>
            <TextBox x:Name="tbPercent" Grid.Column="1" Text="{Binding Percent}" Margin="10" TabIndex="1"/>
        </Grid>
        <Button x:Name="btnCategoryEdit" Grid.Row="2" Content="Сохранить" Click="btnCategoryEdit_Click" TabIndex="2"/>
    </Grid>
</Page>
